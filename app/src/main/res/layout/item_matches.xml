<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/MatchImage"
        android:layout_width="105dp"
        android:layout_height="103dp"
        android:padding="10dp"
        android:src="@drawable/adoption"
        app:civ_border_color="#FDFCFC"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:gravity="center|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MatchName"
            android:layout_width="225dp"
            android:layout_height="29dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Match's Name"
            android:textColor="#FCFBFB"
            app:layout_constraintStart_toEndOf="@+id/MatchImage" />

        <TextView
            android:id="@+id/MatchPhone"
            android:layout_width="223dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="Matches Phone"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/MatchImage"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


</LinearLayout>